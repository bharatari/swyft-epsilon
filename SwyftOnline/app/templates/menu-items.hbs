{{partial "navbar-order"}}

{{side-bar checkout="checkout" login="login" profile="profile" logout="logout" isAuthenticated=isAuthenticated}}

{{#animate-body}}
<div class="img-background container-fluid">
    <h1 class="background-title">Menu.</h1>
</div>

<div class="container">
    <ul class="breadcrumb">
        <li><a>{{#link-to 'index'}}Home{{/link-to}}</a></li>
        <li><a>{{#link-to 'restaurants'}}Restaurants{{/link-to}}</a></li>
        <li class="active">Menu</li>
    </ul>
    
    {{#if restaurant.notice}}
        <p class="notice-header">NOTICE</p>
        <p class="restaurant-notice">{{restaurant.notice}}</p>
        <hr class="notice-divider">
    {{/if}}
    
    {{#each sortedCategories as |category|}}
    <div class="grid-products list-group row">
        <div class="category-box">
            <h3 class="category-name">{{category.name}}</h3>
        </div>
        {{#each category.items as |item|}}
        <button class="grid-product list-group-item" {{action 'transition' item.id}}>
            <div class="click-through">
                <h4 class="grid-product-title">{{item.name}}</h4>
                <br>
                <span class="grid-product-price">{{render-decimals item.baseprice}}</span>
            </div>
        </button>
        {{/each}}     
    </div> 
    {{/each}}
</div>
{{/animate-body}}