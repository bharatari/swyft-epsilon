<nav>
    {{#if display}}
    <ul class="pagination">
        {{#unless onFirstPage}}
            <li><a href="#" {{action 'goToFirstPage'}}>...</a></li>
        {{/unless}}
        {{#each previousFive as |page|}}
            <li><a href="#" {{action 'goToPage' page}}>{{page}}</a></li>
        {{/each}}
        <li><a href="javascript:void(0)">{{currentPage}}</a></li>
        {{#each nextFive as |page|}}
            <li><a href="#" {{action 'goToPage' page}}>{{page}}</a></li>
        {{/each}}
        {{#unless onLastPage}}
            <li><a href="#" {{action 'goToLastPage'}}>...</a></li>
        {{/unless}}
    </ul>
    {{/if}}
    <p class="pagination-text">Page {{currentPage}} of {{totalPages}}</p>
</nav>