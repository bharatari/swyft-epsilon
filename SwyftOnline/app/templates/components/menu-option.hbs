<form class="form-inline">
    <div class="form-group">
      {{input type="text" class="form-control" value=option.name placeholder="Name"}}
    </div>
    <div class="form-group">
      {{input type="number" class="form-control" value=option.price placeholder="Price"}}
    </div>
    <br>
    <button {{action 'remove'}} class="btn btn-light btn-light-warning btn-option-margin btn-option-break-fix">Remove</button>
</form>
  

