{{#if display}}
    <h2 class="option-group-header">{{request.label}} <span class="required-header">Required</span></h2>
    <div class="option-group">
        <div class="list-group">
            {{#each request.options as |option|}}
                <label class="list-group-item">{{radio-button selected=request.value name=request.label class="option" value=option}}<span class="option-text">{{option.name}}</span><span class="badge">{{#if option.price}}{{format-currency option.price simple="true"}}{{/if}}</span></label>
            {{/each}}
        </div>            
    </div>
{{/if}}