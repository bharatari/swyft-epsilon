{{partial "navbar-admin-modern"}}

{{confirmation-dialog body=dialogBody title=dialogTitle displayDialog=displayDialog accept="accept" cancel="cancel"}}

{{modal-dialog body=modalBody title=modalTitle displayModal=modalDisplay}}

<div class="admin-container">
    {{admin-navigation currentRoute=currentRoute}}    
    <div class="admin-content">
        <div class="container">
            <div class="admin-header-bar">
                {{#if isNew}}
                <h1 class="admin-header">New {{modelName}}</h1>
                <h4 class="admin-subtitle">{{newDescription}}</h4>
                <h4 class="admin-help">{{newHelp}}</h4>
                {{else}}
                <h1 class="admin-header">Update {{modelName}}</h1>
                <h4 class="admin-subtitle">{{updateDescription}}</h4>
                <h4 class="admin-help">{{updateHelp}}</h4>
                {{/if}}

            </div>
            <div class="panel admin-panel">
                <div class="admin-panel-header-area">
                    <h1 class="admin-panel-header">Form</h1>
                </div>
                {{#if hasBlock}}
                    {{yield}}
                {{else}}   
                    {{admin-ui properties=metadata.properties}}
                {{/if}}
                {{#if isNew}}
                <div class="row clearbox">
                    <button class="btn btn-light btn-standard" {{action 'submit' 'new'}}>Submit</button>
                </div>

                {{else}}
                <div class="row clearbox">
                    <button class="btn btn-light btn-standard" {{action 'submit' 'update'}}>Submit</button>
                </div>
                {{/if}}
            </div>          
        </div>
    </div>
</div>