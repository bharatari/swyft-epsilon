{{#if property.editable}}
    {{#if typeString}}
        {{#if property.largeField}}
            <div class="form-group">
                <label class="col-sm-2 control-label">{{property.displayName}}</label>
                <div class="col-sm-9">
                    {{textarea class=(concat 'text-area' adminDiscourage) value=property.value}}
                </div>
            </div>
        {{else}}
            <div class="form-group">
                <label class="col-sm-2 control-label">{{property.displayName}}</label>
                <div class="col-sm-9">
                    {{input class=adminDiscourage value=property.value type="text"}}
                </div>
            </div>
        {{/if}}
    {{/if}}

    {{#if typeNumber}}
         <div class="form-group">
            <label class="col-sm-2 control-label">{{property.displayName}}</label>
            <div class="col-sm-9">
                {{input class=adminDiscourage value=property.value type="number"}}
            </div>
        </div>
    {{/if}}

    {{#if typeDate}}
        <div class="form-group">
            <label class="col-sm-2 control-label">{{property.displayName}}</label>
            <div class="col-sm-9">
                {{input class=adminDiscourage value=property.value type="text"}}
            </div>
        </div>
    {{/if}}

    {{#if typeEnum}}
        <div class="form-group">
            <label class="col-sm-2 control-label">{{property.displayName}}</label>
            <div class="col-sm-9">
                {{select-menu action=(action (mut property.value)) content=property.enum selection=property.value optionValuePath="propertyName" optionLabelPath="displayName" class=adminDiscourage}}
            </div>
        </div>    
    {{/if}}

    {{#if typeBoolean}}
        <div class="form-group">
            <label class="col-sm-2 control-label">{{property.displayName}}</label>
            <div class="col-sm-9">
                {{select-menu action=(action (mut property.value)) content=booleanValues selection=property.value optionValuePath="propertyName" optionLabelPath="displayName" class=adminDiscourage}}
            </div>
        </div>  
    {{/if}}
{{/if}}

