<nav id="nav-menu" class="navmenu navmenu-default navmenu-fixed-right offcanvas" role="navigation">
    <div class="nav-menu-content">
        <button class="btn btn-default btn-lg btn-block btn-sidemenu" {{action 'toggle'}}>CLOSE</button>
        {{#if isAuthenticated}}
        <button type="button" class="btn btn-default btn-lg btn-block btn-sidemenu" {{action 'profile'}}>PROFILE</button>
        <button type="button" class="btn btn-default btn-lg btn-block btn-sidemenu" {{action 'logout'}}>LOGOUT</button>
        {{else}}
        <button type="button" class="btn btn-default btn-lg btn-block btn-sidemenu" {{action 'login'}}>LOGIN</button>
        {{/if}}
        <h2 class="cart-header">CART</h2>
        <ul class="cart-list">
            {{#each item in cartArray}}
            <li class="cart-item">
                <h3 class="cart-item-name">{{item.name}}</h3>
                {{#if item.itemOptions}}
                    <h4 class="cart-item-itemoptions">{{item.itemOptions}}</h4>
                {{/if}}
                <h4 class="cart-item-price">{{render-decimals item.price}}</h4>
                <button class="btn remove-button" {{action 'removeItem' item}}>REMOVE</button>
            </li>
            {{/each}}
        </ul>
        <h4 class="total-text">TAX <span class="price-light">{{render-decimals totalTax}}</span></h4>
        <h4 class="total-text">TOTAL <span class="price-light">{{render-decimals totalPrice}}</span></h2>
        {{#if cartArray}}
        <button class="btn btn-default btn-lg btn-block btn-sidemenu btn-checkout" {{action 'checkout'}}>CHECKOUT</button>  
        {{/if}}
    </div>
</nav>