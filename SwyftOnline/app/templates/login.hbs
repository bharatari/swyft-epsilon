<div class="container">
    <form class="login-form" {{action 'login' on='submit'}}>
        <fieldset>
            <h2 style="text-align:center;margin-bottom:30px;">Login to your Swyft Account</h2>
            {{#if loginError}}
            <div class="alert alert-dismissable alert-danger">
                <button class="close" type="button" data-dismiss="alert">Ã—</button>
                <strong>Oh snap!</strong> We didn't recognize your username and password. Please try again.
            </div>
            {{/if}}
            <div>
                {{input class="form-control" value=username type="text" placeholder="Email"}}
                {{input class="form-control" value=password type="password" placeholder="Password"}}
            </div>
            <a>I forgot my password</a><br>
            <a>Sign Up</a>
            <button class="btn btn-default" style="float:right;margin-top:10px;" type="submit">LOGIN</button>
        </fieldset>
    </form>
</div>
