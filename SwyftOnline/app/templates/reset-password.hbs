{{partial "navbar-standard"}}

{{#animate-body}} 
<div class="container">
    <form class="login-form" {{action 'submit' on='submit'}}>
        <fieldset>
            <h2 class="centered-text">Reset Password</h2>
            {{#if error}}
            <div class="alert alert-dismissable alert-danger">
                <button class="close" type="button" {{action 'close'}}>Ã—</button>
                <strong>Oh snap!</strong> Something went wrong there. Make sure your passwords are between 6 and 20 characters long.
            </div>
            {{/if}}
            {{#if success}}
                <div class="alert alert-success">
                    <strong>Great!</strong> Your password has been reset.
                </div>
            {{/if}}
            <div>
                {{input class="form-control" value=username type="text" placeholder="Email"}}
                <input id="password" class="form-control" value={{password}} type="password" placeholder="Password (Between 6 and 20 characters)" />
                <input id="confirmPassword" class="form-control" value={{confirmPassword}} type="password" placeholder="Confirm Password" />
            </div>
            <button class="btn btn-light btn-float" type="submit">SUBMIT</button>
        </fieldset>
    </form>
</div>
{{/animate-body}} 