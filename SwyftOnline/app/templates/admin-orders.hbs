{{partial "navbar-admin"}}

<div class="img-background container-fluid"></div>

<div class="container">
    <ul class="breadcrumb">
        <li><a>{{#link-to 'index'}}Home{{/link-to}}</a></li>
        <li><a>{{#link-to 'admin'}}Admin{{/link-to}}</a></li>
        <li class="active">Orders</li>
    </ul>
    <table class="table table-hover">
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Comments</th>
            <th>Total</th>
            <th>Location</th>
            <th>Phone</th>
            <th>Payment</th>
            <th>Items</th>
        </tr>
        {{#each order in model}}
        <tr>
            <td>{{order.user.firstName}}</td>
            <td>{{order.user.lastName}}</td>
            <td>{{order.userComments}}</td>
            <td>{{render-decimals order.actualAmount}}</td>
            <td>{{order.deliveryLocation}}</td>
            <td>{{order.contactPhone}}</td>
            <td>{{order.paymentType}}</td>
            <td>
                <ul>
                    {{#each item in order.items}}
                    <li>
                        <div>
                            <p><strong>{{item.restaurant}}</strong></p>
                            <p>Name: {{item.name}}</p>
                            <p>Item Options: {{item.itemOptions}}</p>
                            <p>Requests: {{item.additionalRequests}}</p>
                            {{#if item.quantity}}
                            <p><strong>Quantity: {{item.quantity}}</strong></p>
                            {{/if}}
                            <p>{{render-decimals item.price}}</p>
                        </div>
                    </li>
                    {{/each}}
                </ul>
            </td>
        </tr>
        {{/each}}
    </table>
</div>
