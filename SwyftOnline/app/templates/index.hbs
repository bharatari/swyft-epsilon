{{#animate-body animateDelay=delay}}
<div class="row row-one">
    <div class="container-fluid">
        <div class="row-one-text">
            <h1 class="welcome-text-temporary">DELIVERY FROM YOUR<br> FAVORITE RESTAURANTS.</h1>
            <h2 class="sub-promo-text-temporary">WE DELIVER TO PHILLIPS EXETER ACADEMY IN EXETER, NH.</h2>
            <div class="promo-group list-group">
                {{#unless isAuthenticated}}
                <button class="btn list-group-item promo-button turquoise-button" {{action 'signUp'}}>SIGN UP</button>
                {{/unless}}
                <button class="btn list-group-item promo-button lime-button" {{action 'learnMore'}}>LEARN MORE</button>
            </div>        
        </div>
    </div>
</div>

<div class="row row-three">
    <div class="container">
        <h1 class="row-four-text">We're a <span class="highlight">student-run</span> business at Phillips Exeter Academy.</h1>
    </div>
</div>

<div class="container-two">
    <div class="container">
        <div class="row row-two">
            <div class="col-xs-12 col-md-4">
                <h4 class="section-header">News.</h4>
                <h2 class="news-text">{{news}}</h2>
            </div>
            <div class="col-xs-12 col-md-4">
                <h4 class="section-header">When Can I Order?</h4>
                <table class="table table-hover deliveries-table">
                    <thead>
                        <tr>
                            <th>Day</th>
                            <th>Order Cutoff</th>
                            <th>Delivery Time</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Wednesday</td>
                            <td>6:15 pm</td>
                            <td>7:30 pm</td>
                        </tr>
                        <tr>
                            <td>Saturday</td>
                            <td>7:15 pm</td>
                            <td>8:30 pm</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="col-xs-12 col-md-4">
                <h4 class="section-header">Quick Links.</h4>
                {{#unless isAuthenticated}}
                <button class="btn-quick-link" {{action 'login'}}>LOGIN</button>
                {{/unless}}
                <button class="btn-quick-link" {{action 'joinUs'}}>JOIN THE TEAM</button>
            </div>
        </div>
    </div>
</div>

<div class="image-scroller"></div>
<div class="image-scroller-gradient"></div>    

{{/animate-body}}

{{partial 'footer'}}