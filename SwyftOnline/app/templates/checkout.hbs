<nav class="navbar navbar-default" role="navigation">
    <div class="container">
        <div class="navbar-float">
            {{view 'navbar-toggle'}}
        </div>
        <a class="navbar-brand" href="/">ORDER<span class="logo-light">SWYFT</span></a>
    </div>
</nav>

<div class="img-background container-fluid">
    <h1 class="background-title">Checkout.</h1>
</div>

{{modal-dialog body=modalBody title=modalTitle displayModal=displayModal}}

<div class="container">
    <ul class="breadcrumb">
        <li><a>{{#link-to 'index'}}Home{{/link-to}}</a></li>
        <li><a>{{#link-to 'restaurants'}}Restaurants{{/link-to}}</a></li>
        <li class="active">Checkout</li>
    </ul>
    <form>
        <div class="info-well well">
            <h3 class="item-price">Total: {{render-decimals-simple totalPrice}}</h3>
            <h3>Account Balance: {{render-decimals-simple user.balance}}</h3>
            <h3>Payment Options</h3>
            <div class="option-group">
                <div class="list-group">
                    {{#each paymentOption in paymentOptions}}
                    <a class="list-group-item">{{radio-button name=paymentOptions.value class="option" value=paymentOption.id}}<span class="option-text">{{paymentOption.name}}</span></a>
                    {{/each}}
                </div>   
            </div>
            <p class="sub-heading-fix">If you would like to pay with a combination of cash and Swyft Debit, select Cash and tell your delivery personnel how much you want to spend from your account.</p>
            <h3>Options</h3>
            {{input class="form-control" value=user.dormitory type="text" placeholder="Delivery Location"}}
            {{input class="form-control" value=user.phoneNumber type="text" placeholder="Phone Number"}}
            {{input class="form-control" value=additionalRequests type="text" placeholder="Additional Requests"}}
            <p class="sub-heading">If you ordered a McDonalds meal, you may specify your drink here. If you're paying with a 50 or 100 dollar bill, let us know so that we can get you the right amount of change.</p>
            <h3>When do you want your food?</h3>
            <div class="option-group">
                <div class="list-group">
                    {{#each delivery in deliveryList}}
                    <a class="list-group-item">{{radio-button name=deliveryList.value class="option" value=delivery.id}}<span class="option-text">{{delivery.displayTime}}</span></a>
                    {{else}}
                    <h3 class="error-text">Our deliveries are closed for the day. Check our homepage to see when we deliver.</h3>
                    {{/each}}
                </div>            
            </div>
            {{#if deliveryList}}
                {{#unless buttonPressed}}
                    <button class="btn btn-default" type="submit" {{action 'checkout'}}>Checkout</button>       
                {{/unless}}
            {{/if}}
        </div>  
    </form>
</div>
