{{partial "navbar-standard"}}

{{#modal-dialog-dynamic title=modalTitle displayModal=displayModal}}
<ul class="no-list">
    {{#each item in processedOrder.items}}
    <li>
        <div>
            <p><strong>{{item.restaurant}}</strong></p>
            <p>Name: {{item.name}}</p>
            {{#if item.itemOptions}}
                <p>Item Options: {{item.itemOptions}}</p>
            {{/if}}
            {{#if item.additionalRequests}}
                <p>Requests: {{item.additionalRequests}}</p>
            {{/if}}
            {{#if item.quantity}}
                <p>Quantity: {{item.quantity}}</p>
            {{/if}}
            <p>{{render-decimals item.price}}</p>
        </div>
    </li>
    {{/each}}
</ul>
{{/modal-dialog-dynamic}}

{{#animate-body}}
<div class="img-background container-fluid">
    <h1 class="background-title">Profile.</h1>
</div>


<div class="container">
    <ul class="breadcrumb">
        <li><a>{{#link-to 'index'}}Home{{/link-to}}</a></li>
        <li><a>{{#link-to 'restaurants'}}Restaurants{{/link-to}}</a></li>
        <li class="active">Profile</li>
    </ul>
    <form>
        <div class="info-well well">
            <h2 class="name-header">{{user.firstName}} {{user.lastName}}</h2>
            <h4 class="balance">Balance: {{render-decimals-simple user.balance}}</h4>
            {{#if pending}}
            <div class="option-group">
                <h2 class="small-header">Pending Orders</h2>
                <div class="list-group">
                    {{#each order in pending}}
                    <a class="list-group-item" href="#" {{action 'openModal' order}}><span class="option-text">{{order.displayTime}}</span><span class="badge">{{#if order.actualAmount}}{{render-decimals order.actualAmount}}{{/if}}</span></a>
                    {{/each}}
                </div>            
            </div>
            {{/if}}
            <div class="option-group">
                <h2 class="small-header">Recent Orders</h2>
                <div class="list-group">
                    {{#each order in orders}}
                        <a class="list-group-item" href="#" {{action 'openModal' order}}><span class="option-text">{{order.displayTime}}</span><span class="badge">{{#if order.actualAmount}}{{render-decimals order.actualAmount}}{{/if}}</span></a>
                    {{/each}}
                </div>            
            </div>
        </div>  
    </form>
</div>
{{/animate-body}}
