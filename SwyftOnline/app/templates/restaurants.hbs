{{navbar-order-search value=searchValue searchVisible=searchVisible}}

{{side-bar checkout="checkout" login="login" profile="profile" logout="logout" isAuthenticated=isAuthenticated}}

{{#animate-body}}
<div class="img-background container">
    <h1 class="background-title">restaurants</h1>
    <h3 class="background-subtitle">We deliver from the best of Exeter.</h3>
</div>

<div class="app-content">
    <div class="container">
        <div class="restaurant-card-container list-group">
            {{#each filteredRestaurants as |restaurant|}}
                {{restaurant-item restaurant=restaurant transition="transition"}}
            {{else}}
                <h1 class="no-results">We have no results to show.</h1>
            {{/each}}
        </div>   
    </div>
</div>
{{/animate-body}}
{{partial "footer"}}