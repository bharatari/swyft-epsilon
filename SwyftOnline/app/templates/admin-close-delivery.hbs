
{{partial "navbar-admin"}}

<div class="img-background container-fluid"></div>

<div class="container">
    <ul class="breadcrumb">
        <li><a>{{#link-to 'index'}}Home{{/link-to}}</a></li>
        <li><a>{{#link-to 'admin'}}Admin{{/link-to}}</a></li>
        <li class="active">Close Delivery</li>
    </ul>
    <div class="info-well well">
        <h1>Close Delivery</h1>
        <div class="list-group">
            {{#each deliveryList as |delivery|}}
                <a class="list-group-item">{{radio-button name="deliveries" selected=deliveryList.value class="option" value=delivery.id}}<span class="option-text">{{delivery.displayTime}}</span></a>
            {{/each}}
        </div>   
        <button class="btn btn-primary" {{action 'submit'}}>Submit</button>
    </div>
</div>